# Base de données MongoDB
MONGODB_URI=your_mongodb_connection_string_here

# Configuration JWT
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRATION=24h

# Configuration CORS
CORS_ORIGIN=http://localhost:3000
# Liste des origines autorisées (séparées par des virgules)
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Port de l'application
PORT=3000

# Mode de l'environnement (development/production)
NODE_ENV=development

# Configuration OpenAI pour AI Builder
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
AI_MODEL=gpt-4o-mini  # Options: gpt-4o-mini, gpt-4, gpt-3.5-turbo